<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:mini="clr-namespace:MiniEditor;assembly=MiniEditorData"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="mini:IFigure">
            <Label Content="{Binding Name}"/>
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <Canvas Width="635" Height="300">
            <Label x:Name="NumberOfFigures" Content="0" Canvas.Left="-73" Canvas.Top="1" Height="27" Width="43"/>
        </Canvas>
        <Button Content="Add" Command="{Binding Add}" Width="39" />
        <Button Content="Delete" Command="{Binding Delete}" Width="36"/>
        <Button Content="SaveAll" Command="{Binding SaveAll}" Width="52"/>
        <Button Content="LoadAll" Command="{Binding LoadAll}" Width="52"/>
        <ListView ItemsSource="{Binding ViewModel.AllFigures}"/>



    </StackPanel>
</Window>
